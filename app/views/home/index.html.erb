<!--Main Content-->



    <div class="row text-center banner">
        <h1 class="text-center">Choose the size that works for you</h1>
        <table class="post-preview">
            <tr class="">
                <td>
                    <div class="flip-container" style="display: inline-block">
                    	<div class="notflipper">
                    		<div class="dummy">
                    			<%= image_tag("eighth-icon.svg") %>
                    		</div>
                    	</div>
                	</div>
            	</td>
        	</tr>
        	<tr class="">
    	        <td class="post-title text-center">Eighth Page Ad</td>
    	    </tr>
	    </table>
	    <table class="post-preview">
            <tr class="">
                <td> 
                    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                    	<div class="flipper">
                    		<div class="front">
                    			<%= image_tag ("quarter-horizontal-icon.svg") %>
                    		</div>
                    		<div class="back">
                		     	<%= image_tag ("quarter-vertical-icon.svg") %>
                    		</div>
                    	</div>
                    </div>
            	</td>
        	</tr>
        	<tr>
            	<td class="post-title text-center">Quarter Page Ad</td>
            </tr>
        </table>
        <table class="post-preview">
            <tr class="">
                <td>
                    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                    	<div class="flipper">
                    		<div class="front">
                    			<%= image_tag("half-horizontal-icon.svg", class:"dark") %>
                    		</div>
                    		<div class="back">
                    			<%= image_tag ("half-vertical-icon.svg") %>
                    		</div>
                    	</div>
                    </div>
            	</td>
        	</tr>
        	<tr>
            	<td class="post-title text-center">Half Page Ad</td>
    	    </tr>
	    </table>
    	<table class="post-preview">
            <tr class="">
                <td>
                    <div class="flip-container" style="display: inline-block">
                    	<div class="notflipper">
                    		<div class="dummy">
                    			<%= image_tag("full-icon.svg") %>
                    		</div>
                    	</div>
                	</div>
        		</td>
        	</tr>
            <tr>
                <td class="post-title text-center">Full Page Ad</td>
        	</tr>
    	</table>
    </div>
   

<!--Blog updates-->
<div class="container">
<div class="container-fluid">
   
    <!--<div class="row border">-->
        <!--<div class="container-fluid border" >-->
            <div class="col-md-8 col-md-offset-2">
                <% if !@articles.first.title.empty? %>
                    <h1 class="text-center">Lastest News</h1>
                    <!--</div>-->
                    <hr>
                    <% @articles.each do |article| %>
                    <div class="text-center">
                        <%= link_to(article) do %>
                        <table class="post-preview">
                            <tr>
                              <th rowspan="2"><%= image_tag("PARK.jpg", width: '150', height: '150', class: "media-object", style: "border: 1px solid #eeeeee") %></th>
                              <td class="post-title"><%= article.title %></td>
                            </tr>
                            <tr>
                              <td class="post-meta">Posted by <%= article.author %> on <%= article.created_at.strftime('%a, %b %d') %></td>
                            </tr>
                        </table>
                        <% end %>
                         <hr>
                    </div>
                    <% end %>
                    </div>
                    <!--Pager-->
                    <div class="col-md-8 col-md-offset-2 " >
                        <ul class="pager">
                            <li class="" >
                              <%= link_to "Older Posts", articles_path, class: 'nav-link', method: :get %>
                            </li>
                        </ul>
                    </div>
                <% end if %>
        <!--</div>-->
    <br/>
<!--</div>-->
</div>
</div>