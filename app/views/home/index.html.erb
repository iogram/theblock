<!--Header-->
<header class="intro-header" id="mainbg" >
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>The Block</h1>
                    <hr class="small">
                    <span class="subheading">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!--Main Content-->
<div class="container">
    <div class="row">
        <div class=" col-md-10 col-md-offset-2" >
            <div class="container col-md-10">
            <h1 class="text-center">Lastest News</h1>
            <hr>
            </div>
            <% @articles.each do |article| %>
            <div class = "container col-md-10">
                <%= link_to(article) do %>
                <div class="post-preview media">
                    <div class=" media-left media-middle">
                        <%= image_tag("PARK.jpg", width: '210', height: '210', class: "media-object") %>
                    </div>
                    <div class="media-body">
                        <h2 class = "post-title media-heading"><%= article.title %></h2>
                        <h3 class="post-subtitle">add subtitle in db</h3>
                        <p class="post-meta">Posted by <%= article.author %> on <%= article.created_at.strftime('%a, %b %d') %></p>
                    </div>
                </div>
                <% end %>
                 <hr>
            </div>
        <% end %>
        </div>
<!--Pager-->
        <div class="col-md-8 col-md-offset-2" style="padding-right: 0px" >
            <ul class="pager">
                <li class="next" >
                  <%= link_to "Older Posts", articles_path, class: 'nav-link', method: :get %>
                </li>
            </ul>
        </div>
    </div>
</div>
  