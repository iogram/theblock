  <header class="intro-header" id="postbg">
    <div class="container">
        <div class="row ">
            <div class="col-md-8 col-md-offset-1 border">
                <div class="post-heading">
                    <h1><%= @article.title %></h1>
                    <h2 class="subheading"></h2>
                    <span class="meta">Posted by <%= @article.author %> on <%= @article.created_at %></span>
                </div>
            </div>
        </div>
    </div>
  </header>
  <article>
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <p><%= @article.text %></p>
          <hr>
          <div class="btn-group">
            <% if user_signed_in? %>
                <%= link_to 'Edit', edit_article_path(@article), class:'btn btn-default' %>
            <% end %>
            <%= link_to 'Back', articles_path, class:'btn btn-default' %>
          </div>
       </div> 
    </div>
   </div>
 </article>
  
