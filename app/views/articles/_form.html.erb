<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <%= form_for :article, url: articles_path do |f| %>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls borderTop">
             <label>Title</label>
            <%= f.text_field :title, :placeholder => 'Title', class: 'form-control' %>
            <p class="help-block text-danger"></p>
          </div>
        </div>  
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Text</label>
            <%= f.text_area :text, :placeholder => 'Text', size: '50x10', class: 'form-control' %>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <ul class= "pager">
          <li><%= f.submit class: 'nav-link' %></li>
          <li><%= link_to 'Back', articles_path, class:'nav-link', style:'float:right' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
