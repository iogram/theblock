    <!--Header-->
    <header class="intro-header" id="postbg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>News</h1>
                        <h2 class="subheading">All your local news and stuff</h2>
                        <span class="meta">Last updated on <%= @article.strftime('%a, %b %d') %> </span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <div class="container">
        <div class="row">
                <div class=" col-md-10 col-md-offset-2" >
                    <% @articles.each do |article| %>
                    <div class = "container col-md-10">
                        <%= link_to(article) do %>
                        <div class="post-preview media">
                            <div class=" media-left media-middle">
                                <%= image_tag("PARK.jpg", width: '210', height: '210', class: "media-object") %>
                            </div>
                            <div class="media-body">
                                <h2 class = "post-title media-heading"><%= article.title %></h2>
                                <h3 class="post-subtitle">add subtitle in db</h3>
                                <p class="post-meta">Posted by <%= article.author %> on <%= article.created_at.strftime('%a, %b %d') %></p>
                            </div>
                        </div>
                        <% end %>
                        <div class="container" style="padding-left: 0px">
                            <ul class ="pager">
                                <li class="btn-group ">
                                    <%= link_to 'Show', article_path(article), class:'btn btn-defaul', style:"padding:5px 5px" %>
                                </li>
                                <li class="btn-group ">
                                    <%= link_to 'Edit', edit_article_path(article), class:'btn btn-defaul', style:"padding:5px 5px" %>
                                </li>
                                <li class="btn-group ">
                                    <%= link_to 'Destroy', article_path(article), class:'btn btn-defaul', style:"padding:5px 5px",
                                                    method: :delete,
                                                    data: { confirm: 'Are you sure?' } %>
                                </li>
                            </ul>
                        </div>
                         <hr>
                    </div>
                <% end %>
                </div>
                <!-- Pager -->
                 <div class="col-md-8 col-md-offset-2" style="padding-right: 0px" >
                <ul class="pager">
                    <li class="btn-group next">
                        <%= link_to 'Back', articles_path, class:'btn btn-default', method: :get %>
                    </li>
                    <li class="btn-group next">  
                        <%= link_to 'New article', new_article_path, class:'btn btn-default' %>
                    </li>
                </ul>
             </div>
        </div>
    </div>
<hr>