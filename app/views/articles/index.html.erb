<!--Header-->
<header class="intro-header" id="postbg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-3 col-md-10 col-md-offset-2">
                <div class="post-heading">
                    <h1>News</h1>
                    <h2 class="subheading">All your local news and stuff</h2>
                    <% if !@articles.first.title.empty? -%>
                        <h3 class="meta">Last updated on <%= @article.strftime('%a, %b %d') -%></h3>
                    <% end -%>
                   
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="container-fluid" >
        <div>
            <h1 class="text-center">Lastest News</h1>
            <hr>
        </div>
        <% if !@articles.first.title.empty? -%>
            <% @articles.each do |article| -%>
            <div class = "text-center post col-md-6 col-md-offset-3">
                <%= link_to(article) do -%>
                <div class="panel panel-default news-post" style="background-image: url('park2.jpg')">
                    <div class="panel-body">
                        <h1 class="post-title"><%= article.title %></h1>
                    </div>
                    <div class="panel-heading">
                        <h1 class="post-meta">Posted by <%= article.author %> on <%= article.created_at.strftime('%a, %b %d') %></h1>
                    </div>
                </div>
                <% end -%>
                <hr>   
            </div>
            <div class="container col-md-8 col-md-offset-3 ">
                <ul class="pager">
                <% if user_signed_in? -%>
                <li><%= link_to 'Show', article_path(article), class:'nav-link', style:"padding:5px 5px; float:left" -%></li>
                <li><%= link_to 'Edit', edit_article_path(article), class:'nav-link', style:"padding:5px 5px; float:left" -%></li>
                <li><%= link_to 'Destroy', article_path(article), class:'nav-link', style:"padding:5px 5px; float:left",
                                                            method: :delete,
                                                            data: { confirm: 'Are you sure?' } -%></li>
                <% end -%>
                </ul>
            </div>
            <% end -%>
        <% end -%>
<!--Pager-->
        <div class="col-md-8 col-md-offset-2 ">
            <ul class= "pager">
                <% if user_signed_in? -%>
                    <li><%= link_to 'New article', new_article_path, class:'nav-link' -%></li>
                <% end -%>
                <li><%= link_to "Back", root_path, class: 'nav-link', method: :get -%></li>
            </ul>
        </div>  
     </div>
 </div>