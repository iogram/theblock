<header class="intro-header" id="contactbg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Contact Me</h1>
                        <hr class="small">
                        <span class="subheading">Have questions? I have answers (maybe).</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
 <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p class="post-title">Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you within 24 hours!</p>
                    <div class="row control-group">
                        <%= form_for @contact do |f| %>
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :name %>
                            <%= f.text_field :name, :placeholder => 'Name', class: 'form-control' %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :email %>
                            <%= f.email_field :email, :placeholder => 'Email', class: 'form-control' %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :comments %>
                            <%= f.text_area :comments, :placeholder => 'Comments', size: '50x10',class: 'form-control' %>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <ul class="pager">
                                <li><%= f.submit 'Send', class: 'nav-link' %></li>
                            </ul>
                            <% end %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
